#!/usr/bin/env node

var program = require('commander')
  , pkg = require('../package.json')

program
  .version(pkg.version)
  .command('on [user]', 'get connected to the internet')
  .command('off', 'get disconnected')
  .command('status', 'show status')
  .command('user', 'manage users')
  .command('config', 'manage configurations')
  .on('--help', function () {
    console.log('  Examples:')
    console.log('')
    console.log('    $ sw on')
    console.log('    $ sw on 1234567890')
    console.log('    $ sw off')
    console.log('    $ sw status')
    console.log('')
  })
  .parse(process.argv)

if (!program.args.length) {
  program.help()
}
