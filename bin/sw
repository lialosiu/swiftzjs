#!/usr/bin/env node

var swiftz = require('../')
  , package = require('../package.json')

var program = require('commander')

program
  .version(package.version)
  .command('login [user]', 'get connected to the internet')
  .command('logout', 'get disconnected')
  .command('status', 'show status')
  .command('user', 'manage users')
  .on('--help', function () {
    console.log('  Examples:')
    console.log('')
    console.log('    $ swiftz login')
    console.log('    $ swiftz login 1234567890')
    console.log('    $ swiftz logout')
    console.log('    $ swiftz status')
    console.log('')
  })
  .parse(process.argv)

if (!program.args.length) {
  program.help()
}
