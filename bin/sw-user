#!/usr/bin/env node

var program = require('commander')
  , user = require('../lib/cli/user')

program
  .command('add [user]')
  .description('add an user')
  .action(user.add)

program
  .command('remove [user]')
  .description('remove an/all user')
  .action(user.remove)

program
  .command('logs')
  .description('show logs of current user')
  .action(user.logs)

program.parse(process.argv)

if (!program.args.length) {
  user.list()
}
